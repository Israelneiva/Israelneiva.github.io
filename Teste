    // Obtém a data atual
    var currentDate = new Date();
    
    // Adiciona 1 ano à data atual
    currentDate.setFullYear(currentDate.getFullYear() + 1);
    
    // Formata a data adicionada
    var newDate = currentDate.toLocaleDateString();
    
    // Atualiza a data na página
    document.querySelector("#eventDetails li:nth-child(2)").textContent = "Data: " + newDate;
  </script>
